<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Vistao Football{% endblock %}</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    <link rel="stylesheet" href="{{ asset('build/style.css') }}">
    {% block stylesheets %}{% endblock %}
</head>
<body>

{% block header %}
    <header>
        <div class="container-fluid">
            <div class="row">
                <div class="col-xs-3 text-left">
                    <a class="navbar-brand" data-toggle="modal"
                       data-target=".bs-modal-header" href="{{ path('coachMenu') }}">
                        <img class="logo" alt="vistao football logo brand"
                             src="{{ asset('build/images/logo_header.bfca6b65.png') }}">
                    </a>
                </div>

                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <div class="col-xs-6 text-center">
                        <h1 class="text-center">BIENVENUE {{ app.user.username }}</h1>
                    </div>
                    <div class="col-xs-3 text-right">
                        <a href="{{ path('fos_user_security_logout') }}"
                           class="btn btn-style">{{ 'Se d√©connecter'|trans({}, 'FOSUserBundle') }}</a>
                    </div>
                {% else %}
                    <div class="col-xs-6 text-center">
                        <h1 class="text-center">BIENVENUE SUR VISTAO FOOTBALL</h1>

                    </div>
                    <div class="col-xs-3 text-right">
                        <a href="{{ path('fos_user_security_login') }}"
                           class="btn btn-style" style="float: right;">{{ 'Se connecter'|trans({}, 'FOSUserBundle') }}</a>
                    </div>
                {% endif %}
            </div>
        </div>
    </header>
{% endblock header %}


{% block content %}
    <div class="container-fluid">
        {% if app.request.hasPreviousSession %}
            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="flash-{{ type }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        {% endif %}
    </div>
{% endblock %}

{% block body %}{% endblock %}

{% block fos_user_content %}{% endblock %}


<!-- these two files now must be included in every page -->

<script src="{{ asset('build/manifest.js') }}"></script>
<script src="{{ asset('build/jquery_jqueryUi.js') }}"></script>
<script src="{{ asset('build/app.js') }}"></script>

{% block javascripts %}{% endblock %}
</body>
</html>
