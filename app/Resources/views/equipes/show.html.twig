{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/admin_equipes.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <h1>ÉQUIPE :</h1>
        <div class="panel panel-default">
            <table class="table">
                <tbody>
                <tr>
                    <th>Nom de l'entraîneur</th>
                    <td>{{ nom }} {{ prenom }}</td>
                </tr>
                <tr>
                    <th>Nom du club</th>
                    <td>{{ equipe.entraineurNomClub }}</td>
                </tr>
                <tr>
                    <th>Championnat</th>
                    <td>{{ equipe.championnat }}</td>
                </tr>
                <tr>
                    <th>Catégorie</th>
                    <td>{{ equipe.categorie }}</td>
                </tr>
                <tr>
                    <th>Numéro d'équipe</th>
                    <td>{{ equipe.numEquipe }}</td>
                </tr>
                </tbody>
            </table>
        </div>

        {% for joueur in joueurs  %}
        <div class="panel panel-default">
            <table class="table">
                <tbody>
                <tr>
                    <th class="text-center aligner">Nom du joueur</th>
                    <td class="text-center aligner">{{ joueur.nom }} {{ joueur.prenom }}</td>
                </tr>
                <tr>
                    <th class="text-center aligner">Numéro du Maillot</th>
                    <td class="text-center aligner">{{ joueur.numMaillot }}</td>
                </tr>
                <tr>
                    <th class="text-center aligner">Poste</th>
                    <td class="text-center aligner">{{ joueur.poste }}</td>
                </tr>
                </tbody>
            </table>
        </div>
        {% endfor %}

        <div class="boutons_bas">
        <a href="{{ path('equipes_index') }}">
            <button class="btn-style btn btn-block">RETOUR À LA LISTE</button>
        </a>

        <br>

        <a href="{{ path('equipes_edit', { 'id': equipe.id }) }}">
            <button class="btn-style btn btn-block">GÉRER L'ÉQUIPE</button>
        </a>
        </div>

            {{ form_start(delete_form) }}
            <button type="submit" value="Delete" class="btn-style btn-align btn btn-block">SUPPRIMER L'ÉQUIPE</button>
            {{ form_end(delete_form) }}
    </div>


{% endblock %}
