{% endblock %}

{% block header %}
    <header>
        <div class="container-fluid">
            <div class="row">
                <div class="col-xs-3 text-left">
                    <div class="navbar-brand" data-toggle="modal"
                         data-target=".bs-modal-header">
                        <img class="logo" alt="vistao football logo brand"
                             src="{{ asset('build/images/logo_header.bfca6b65.png') }}">
                    </div>
                </div>

                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <div class="col-xs-6 text-center">
                        <h1 class="text-center">BIENVENUE {{ app.user.username }}</h1>
                    </div>
                    <div class="col-xs-3 text-right">
                        <a href="{{ path('fos_user_security_logout') }}"
                           class="btn btn-style">{{ 'Se déconnecter'|trans({}, 'FOSUserBundle') }}</a>
                    </div>
                {% else %}
                    <div class="col-xs-6 text-center">
                        <h1 class="text-center">BIENVENUE SUR VISTAO FOOTBALL</h1>

                    </div>
                    <div class="col-xs-3 text-right">
                        <a href="{{ path('fos_user_security_login') }}"
                           class="btn btn-style"
                           style="float: right;">{{ 'Se connecter'|trans({}, 'FOSUserBundle') }}</a>
                    </div>
                {% endif %}
            </div>
        </div>
    </header>
{% endblock header %}

